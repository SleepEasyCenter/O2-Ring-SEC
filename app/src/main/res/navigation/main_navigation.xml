<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_dashboard">

    <fragment
        android:id="@+id/home_dashboard"
        android:name="com.example.lpdemo.fragments.HomeDashboardFragment"
        android:label="fragment_home_dashboard"
        tools:layout="@layout/fragment_home_dashboard" >
        <action
            android:id="@+id/action_home_dashboard_to_deviceScanActivity"
            app:destination="@id/deviceScanActivity" />
    </fragment>
    <fragment
        android:id="@+id/session_history"
        android:name="com.example.lpdemo.fragments.SessionHistoryFragment"
        android:label="fragment_session_history"
        tools:layout="@layout/fragment_session_history" />
    <fragment
        android:id="@+id/menu_settings"
        android:name="com.example.lpdemo.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/deviceScanActivity"
        android:name="com.example.lpdemo.DeviceScanActivity"
        android:label="DeviceScanActivity" />
</navigation>