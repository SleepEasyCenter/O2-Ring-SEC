<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scan"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:layout_marginEnd="8dp"
        android:text="scan"
        app:layout_constraintBottom_toBottomOf="@+id/ble_split"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ble_split" />

    <EditText
        android:id="@+id/ble_split"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:hint="Filter"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/scan"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="369dp"
        android:layout_height="590dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scan"
        app:layout_constraintVertical_bias="0.075">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/sleepeasylogo" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="409dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="670dp" />


</androidx.constraintlayout.widget.ConstraintLayout>